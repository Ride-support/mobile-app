<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilCompany"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    >
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#91191322"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/per"
        android:text="PERFIL"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/namequery"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/dirquery"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/cityquery"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/phonequery"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/managerquery"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/emailquery"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar servicio"
        android:id="@+id/btn_reg"
        android:background="#C4E32C2C"
        android:layout_marginTop="50dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver servicios registrados"
        android:id="@+id/querybt"
        android:background="#C4E32C2C"
        android:layout_marginTop="50dp"
        />
</LinearLayout>
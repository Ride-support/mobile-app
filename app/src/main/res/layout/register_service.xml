<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:orientation="vertical"
    android:background="@drawable/bckg"
    tools:context=".MainActivity"

    >
    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#C90E0E0E"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registre el nuevo servicio que desea ofrecer su empresa"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <EditText android:id="@+id/txtCompanyName"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Nombre del establecimiento comercial"
        android:layout_marginTop="5dp"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:inputType="text" />
    <EditText android:id="@+id/txtCompanyId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Id del servicio"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:layout_marginTop="5dp"
        android:inputType="text" />

    <EditText android:id="@+id/txtCompanyLocation"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:hint="Direccion"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/txtSheduleService"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:hint="Horario de atenciÃ³n"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/txtPricesService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:hint="Precios"
        />

    <EditText
        android:id="@+id/txtTypeService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF5F5"
        android:backgroundTint="#C8C1D3"
        android:textColorHint="#B3A9A9"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="5dp"
        android:hint="Tipo de servicio"


        />



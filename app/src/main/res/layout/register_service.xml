<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registre el nuevo servicio que desea ofrecer su empresa"
        android:fontFamily="sans-serif-black"
        android:textColor="#7EA197"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <EditText android:id="@+id/txtCompanyName"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Nombre del establecimiento comercial"
        android:layout_marginTop="5dp"
        android:inputType="text" />
    <EditText android:id="@+id/txtCompanyId"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Id del servicio"
        android:layout_marginTop="5dp"
        android:inputType="text" />

    <EditText android:id="@+id/txtCompanyLocation"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Direccion"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/txtSheduleService"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Horario de atenciÃ³n"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/txtPricesService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:hint="Precios"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtTypeService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:layout_marginTop="5dp"
        android:hint="Tipo de servicio"
        android:inputType="textPassword" />


